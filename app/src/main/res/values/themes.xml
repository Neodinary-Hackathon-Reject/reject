<resources>
    <!-- Base application theme. -->
    <style name="Theme.Reject" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Reject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Reject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Reject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Chip Style-->
    <style name="Widget.Pawpaw.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Pawpaw.Chip.Choice</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="chipBackgroundColor">@color/chip_check_bg</item>
        <item name="android:textColor">@color/chip_check_text</item>
    </style>

    <!--dialog위에서 아래로 아래에서 위로 open,close 애니메이션 주기-->
    <style name="AnimationPopupStyle">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_up_bottom</item>
    </style>

    <style name="ThemeOverlay.Pawpaw.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

</resources>